{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "plugins": ["import"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "import": "off"
    }
}
