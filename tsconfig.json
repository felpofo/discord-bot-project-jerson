{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "lib": ["ES2020"],
    
    "strict": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": ["@types", "node_modules/@types"],
    "outDir": "./build",
    
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "config.json",
    "package.json",
    "assets/*",
  ]
}