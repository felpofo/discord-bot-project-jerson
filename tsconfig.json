{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "lib": ["ES2020"],
    
    "strict": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": ["src/@types", "node_modules/@types"],
    "outDir": "build/",
    "rootDir": "src/",
    
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*.ts",
    "src/assets/*",
    "src/config.json",
  ]
}